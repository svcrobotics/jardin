<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <div class="h1-like">Types de plantes</div>
    <%= link_to "Créer un nouveau type", new_type_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
  </div>

  <% @types.each do |type| %>
    <div class="flex justify-between items-center mb-4">
      <div class="h1-like"><%= type.nom.capitalize %></div>
      <%= link_to "Voir", type_path(type), class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium" %>
    </div>

    <div class="flex justify-between items-center">
      <div class="h2-like">Familles associées :</div>
      <%= link_to "Créer une nouvelle famille", new_famille_path(type_id: type.id), class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
    </div>

    <% if type.familles.any? %>
      <ul class="list-disc ml-6">
        <% type.familles.each do |famille| %>
          <li><div class="h3-like" ><%= link_to famille.nom, famille_path(famille), class: "link-famille" %></div></li>
        <% end %>
      </ul>
    <% else %>
      <p>Aucune famille associée.</p>
    <% end %>
    <hr class="mt-4">
  <% end %>
  <br><br>
</div>
