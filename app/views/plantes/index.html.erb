<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center pb-8">
    <h1 class="mx-auto text-lg font-bold text-4xl">Plantes</h1>
  </div>

  <table id="plantes" class="mx-auto">
    <tfoot>
      <tr>
        <td colspan="3">
          <div class="mt-8">
            <%= link_to 'New plante', new_plante_path, class: "inline rounded-lg py-3 px-5 bg-green-600 text-white block font-medium" %>
          </div>
        </td>
      </tr>
    </tfoot>

    <tbody>
      <% @plantes.each do |plante| %>
        <tr class="<%= cycle('bg-green-50', 'bg-white') %>">

          <td class="px-2 py-3">
            <%= image_tag(plante.image_url, class: 'w-40') %>
          </td>

          <td>
            <h1 class="text-xl font-bold mb-3"><%= plante.nom %></h1>
            <p>
              <%= plante.categorie_human_readable %>
            </p>
          </td>

          
          <td class="px-3">
            <ul>
              <li>
                <%= link_to 'Show', plante, class: 'hover:underline' %>
              </li>
              <li>
                <%= link_to 'Edit', edit_plante_path(plante), class: 'hover:underline' %>
              </li>
              <li>
                <%= link_to 'Destroy', plante, class: 'hover:underline', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
 
    
