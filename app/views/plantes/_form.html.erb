    <%= form.collection_select :famille_id, @familles, :id, :nom, prompt: "SÃ©lectionnez une famille" %>
  </div>

  <div class="my-5">
    <%= form.label :nom %>
    <%= form.text_field :nom, placeholder: "Nom latin ou nom commun.", class: "markdown-content block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :image_url, "URL de l'image" %>
